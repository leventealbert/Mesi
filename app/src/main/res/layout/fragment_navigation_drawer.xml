<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.leventealbert.mesi.NavigationDrawerFragment"
    android:background="#DADADA">

    <LinearLayout
        android:id="@+id/fragment_navigation_drawer_image_wrapper"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/message">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:id="@+id/fragment_navigation_drawer_image"
            android:layout_alignParentTop="true"
            android:src="@drawable/mesi_logo"
            android:adjustViewBounds="true"
            android:padding="20dp"/>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_navigation_drawer_list"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/fragment_navigation_drawer_image_wrapper">

    </android.support.v7.widget.RecyclerView>
</RelativeLayout>
