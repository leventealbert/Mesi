<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@drawable/message"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/fragment_navigation_drawer_image"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:padding="20dp"
        android:src="@drawable/mesi_logo" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_alignParentBottom="true"
        android:background="@color/primary_color_opaque">

        <ImageView
            android:id="@+id/fragment_navigation_drawer_user_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/ic_account_circle_grey600_48dp" />

        <TextView
            android:id="@+id/fragment_navigation_drawer_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="72dp"
            android:layout_marginTop="8dp"
            android:text="@string/user_list_row_full_name"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/fragment_navigation_drawer_user_team"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment_navigation_drawer_user_name"
            android:layout_marginLeft="72dp"
            android:text="Team Domain"
            android:textColor="@android:color/white"
            android:textSize="14sp" />
    </RelativeLayout>

</RelativeLayout>